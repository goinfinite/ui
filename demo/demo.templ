							@uiControl.Button(uiControl.ButtonSettings{
								Label:           "Dark",
								OnClickFunc:     "isModalVisible = true",
								Size:            uiControl.ButtonSizeSm,
								BackgroundColor: "neutral-700",
							})
							@uiControl.Button(uiControl.ButtonSettings{
								Label:           "Blue",
								OnClickFunc:     "isBlueBackdropModalVisible = true",
